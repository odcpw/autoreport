<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab id="tabAutoBericht" label="AutoBericht">

        <!-- IMPORT -->
        <group id="grpImport" label="Import">
          <button id="btnImportAll"
                  label="Import All"
                  size="large"
                  imageMso="FileOpen"
                  onAction="AB_ImportAll" />
          <button id="btnImportChapter"
                  label="Import Chapter…"
                  size="large"
                  imageMso="FileOpen"
                  onAction="AB_ImportChapter" />
        </group>

        <!-- MARKDOWN -->
        <group id="grpMarkdown" label="Markdown">
          <button id="btnMarkdownAll"
                  label="Markdown All"
                  size="large"
                  imageMso="Paste"
                  onAction="AB_ConvertMarkdownAll" />
          <button id="btnMarkdownChapter"
                  label="Markdown Chapter…"
                  size="large"
                  imageMso="Paste"
                  onAction="AB_ConvertMarkdownChapter" />
          <separator id="sepMarkdown1" />
          <button id="btnMarkdownSelection"
                  label="Markdown Selection"
                  size="large"
                  imageMso="FormatPainter"
                  onAction="AB_ConvertMarkdownSelection" />
        </group>

        <!-- TEXT / LOGOS -->
        <group id="grpTextMarkers" label="Textfelder">
          <button id="btnTextFields"
                  label="Text Markers"
                  size="large"
                  imageMso="TextBoxInsert"
                  onAction="AB_ImportTextFields" />
          <button id="btnInsertLogo"
                  label="Insert Logos"
                  size="large"
                  imageMso="PictureInsertFromFile"
                  onAction="AB_InsertLogos" />
          <button id="btnInsertSpider"
                  label="Insert Spider"
                  size="large"
                  imageMso="InsertChart"
                  onAction="AB_InsertSpider" />
        </group>

        <!-- EXPORT -->
        <group id="grpExport" label="Export">
          <button id="btnExportTrainingD"
                  label="Training D"
                  size="large"
                  imageMso="FileSaveAsPdfOrXps"
                  onAction="AB_ExportPptTrainingD" />
          <button id="btnExportTrainingF"
                  label="Training F"
                  size="large"
                  imageMso="FileSaveAsPdfOrXps"
                  onAction="AB_ExportPptTrainingF" />
          <separator id="sepExport1" />
          <button id="btnExportBesprechung"
                  label="Bericht Besprechung"
                  size="large"
                  imageMso="FileSaveAsPdfOrXps"
                  onAction="AB_ExportPptBesprechung" />
        </group>

      </tab>
    </tabs>
  </ribbon>
</customUI>
