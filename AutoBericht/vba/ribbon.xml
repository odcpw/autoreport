          <button id="btnAutoBerichtImport" label="Import" size="large" imageMso="FileOpen" onAction="AB_ImportReport" />
          <button id="btnAutoBerichtMarkdown" label="Markdown" size="large" imageMso="TextToTable" onAction="AB_ConvertMarkdown" />
          <button id="btnAutoBerichtLogo" label="Logo" size="large" imageMso="PictureInsert" onAction="AB_InsertLogo" />
        </group>
        <group id="grpAutoBerichtPpt" label="PowerPoint">
          <button id="btnAutoBerichtPptReport" label="PPT Bericht" size="large" imageMso="SlideNew" onAction="AB_ExportPptReport" />
          <button id="btnAutoBerichtPptTraining" label="VG Seminar D" size="large" imageMso="Presentation" onAction="AB_ExportPptTraining" />
        </group>
      </tab>
    </tabs>
